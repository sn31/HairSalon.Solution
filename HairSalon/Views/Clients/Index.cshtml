@{ Layout = "_Layout"; }
<div class="nav">
  <form action='/' method='get'>
    <button class='btn mx-2'>Back to Home</button>
  </form>
  <form action='/clients/deleteall' method='post'>
    <button class='btn mx-2'>Delete All Clients</button>
  </form>
</div>

<div class="container stylists">
  <div class="row">


    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Stylist</th>
            <th scope="col">Edit Info</th>
             <th scope="col">Remove Client</th>
          </tr>
        </thead>
        @foreach (var client in @Model) {
        <tbody>
          <tr>
            <td>@client.Name</td>
            <td>@client.Phone</td>
            <td>@client.GetStylists()[0].Name</td>
            <td>
              <form action='/clients/update/@client.Id' method='get'>
                <button class='btn btn-success' type="submit">Edit Client</button>
              </form>
              <br>
            </td>
            <td>
              <form action='/clients/delete/@client.Id' method='post'>
                <button class='btn btn-success' type="submit">Remove Client</button>
              </form>
              <br>
            </td>
          </tr>
        </tbody>
        }
      </table>
    </div>
  </div>